<h1>Nueva Idea</h1>
<%= form_for @idea, url: refinery.ideas_ideas_path do |form|%>
  <div class="control-group">
    <%= form.label :title, 'Titulo', class: 'control-label' %>
    <div class="controls">
      <%= form.text_field :title, placeholder: 'Titulo de tu experiencia', class: 'input-xxlarge' %>
    </div>
  </div>
  <div class="control-group">
    <label>Acceso Rapido</label>
    <div class="controls">
      <a href="#" id='mceAdvImage' class="btn btn-mini"><i class="icon-picture"></i> Agregar Imagen</a>
      <a href="#" id='mceUploadImage' class="btn btn-mini"><i class="icon-upload"></i> Subir Imagen</a>
      <a href="#" id='mceMedia' class="btn btn-mini"><i class="icon-film"></i> Agregar Video</a>
      <a href="#" id='mcePreview' class="btn btn-mini"><i class="icon-file"></i>Previo</a>
    </div>
  </div>
  <div class="control-group">
    <%= form.label :content, 'Contenido', class: 'control-label' %>
    <div class="controls">
      <%= form.text_area :content, placeholder: "Contenido de la idea", class: ["tinymce"], cols: 60 %>
    </div>
  </div>
  <div class="control-group">
    <%= form.submit 'Enviar' %>
  </div>
<% end %>