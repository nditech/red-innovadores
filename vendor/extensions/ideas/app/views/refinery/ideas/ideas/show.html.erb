<% content_for :body_content_title do %>
  <%= @idea.title %>
<% end %>

<% content_for :body do %>
  <div class="idea show">
    <aside class='details'>
      <div class="details-container">
        <div class="date">
          <%= l(@idea.created_at.to_date, :format => :short)%><span><%= @idea.created_at.year %></span>
        </div>
      
        <div class="details-separator"></div>
      
        <div class="author">
          <span><i class="icon-user"></i><%= "#{@idea.user.username.humanize}" if @idea.user.present? %></span>
        </div>
      
        <div class="votes">
          <h3>Vota esta idea</h3>
          <%= link_to refinery.ideas_idea_votes_path(@idea, vote: {tendency: 1}), class: ['btn', 'btn-primary'], method: :post do %>
            <i class="icon-thumbs-up icon-white"></i> (<%= @idea.votes.votes_up.count %>)
          <% end %>
          <%= link_to refinery.ideas_idea_votes_path(@idea, vote: {tendency: -1}), class: ['btn', 'btn-danger'], method: :post do %>
            <i class="icon-thumbs-down icon-white"></i> (<%= @idea.votes.votes_down.count %>)
          <% end %>
        </div>
      
        <div class="other-ideas">
          <h3>Otras Ideas</h3>
          <ul id="ideas">
            <% @ideas.each do |idea| %>
              <li><%= link_to idea.title, refinery.ideas_idea_path(idea) %></li>
            <% end %>
          </ul>
        </div>
      
        <div class="social-plugin-container">
          <h3>Comparte</h3>
          <ul class="social-plugin">
            <li><span class='st_facebook_hcount' displayText='Facebook' st_title="<%= @idea.title %>"></span></li>
            <li><span class='st_fblike_hcount' displayText='Facebook Like'></span></li>
            <li><span class='st_twitter_hcount' displayText='Tweet' st_title="<%= truncate(@idea.title, {:length => 80}) %>"></span></li>
            <li><span class='st_googleplus_hcount' displayText='Google +' st_title="<%= @idea.title %>"></span></li>
            <li><span class='st_email_hcount' displayText='Email' st_title="<%= @idea.title %>"></span></li>
          </ul>
        </div>
      </div>
    </aside>

    <section class="summary">
      <header>
        <h1><%= raw @idea.title%></h1>
      </header>
      <p><%= content_teaser(@idea).html_safe %></p>
    </section>
  </div>
  
  <aside id="comments">
    <div class="comments-container">

      <h2><%= t('title', :scope => 'refinery.blog.posts.show.comments') %></h2>

      <div class="comments-messages-container">
        <% if (comments = @idea.comment_threads).any? %>
          <%= render :partial => "comment", :collection => comments %>
        <% else %>
          <article class='blog_comment_message'>
            <div class="comment-message-container">
              <div class='comment_message'>
                <%= t('none', :scope => 'refinery.blog.shared.comments').humanize %>.
              </div>
            </div>
          </article>
        <% end %>
      </div>

      <%= form_for Comment.new, url: refinery.ideas_idea_comments_path(@idea) do |f| %>
        <div class="form_new_comment">
          <h2><%= t('add', :scope => 'refinery.blog.posts.show.comments') %></h2>
          <%= render :partial => "/refinery/admin/error_messages",
                     :locals => {
                       :object => f.object,
                       :include_object_name => true
                     } %>
          <% unless current_refinery_user %>
            <div class='field'>
              <%= f.text_field :name, placeholder: 'Nombre', class: 'span4' %>
            </div>
            <div class='field'>
              <%= f.email_field :email, placeholder: 'Email', class: 'span4' %>
            </div>
          <% end %>
          <div class='field message_field'>
            <%= f.text_area :body, placeholder: 'Comentario', class: 'span4' %>
          </div>
          <div class='field'>
            <%= f.submit t('submit', :scope => 'refinery.blog.posts.show') %>
          </div>
        </div>
      <% end %>
    </div> 
  </aside>
<% end %>

<%= render '/refinery/content_page' %>

<% if params[:share] == 'true' %>
  <div class="modal fade">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h3>Comparte tu idea</h3>
    </div>
    <div class="modal-body">
      <span class='st_facebook_hcount' displayText='Facebook' st_title="<%= @idea.title %>"></span>
      <span class='st_twitter_hcount' displayText='Tweet' st_title="<%= truncate(@idea.title, {:length => 80}) %>"></span>
      <span class='st_googleplus_hcount' displayText='Google +' st_title="<%= @idea.title %>"></span>
      <span class='st_email_hcount' displayText='Email' st_title="<%= @idea.title %>"></span>
    </div>
    <div class="modal-footer">
      <a href="#" class="btn" data-dismiss="modal" aria-hidden="true">Cerrar</a>
    </div>
  </div>
  
  <% content_for :javascripts do %>
    <script type="text/javascript" charset="utf-8">
      $('.modal').modal();
    </script>
  <% end %>
<% end %>

<% if params[:highlight].present? %>
  <% content_for :javascripts do %>
    <script type="text/javascript">
      $("section.summary").highlight("<%= params[:highlight]%>");
    </script>
  <% end %>
<% end %>

<% content_for :meta do %>
  <% images = extract_images(@idea.content) %>
  <meta property="og:type"	 content="article"> 
  <meta property="og:url"		 content="<%= "#{request.protocol}#{request.host_with_port}#{request.fullpath}" %>">
  <meta property="og:site_name"	 content="Red Innovacion">
  <% if images.present? %>
    <meta property="og:image"	 content="<%= "#{request.protocol}#{request.host_with_port}#{images.first.value}" %>">
  <% end %>
  <meta property="og:title"	 content="<%= @idea.title %>">
  <meta property="og:description"  content="<%= truncate(strip_tags(@idea.content), {:length => 100}) %>"> 
  <% if @idea.user.present? %>
    <meta property="article:author"	 content="<%= @idea.user.username.humanize %>">
  <% end %>
  
  <meta name="twitter:card"	 content="summary">
  <meta name="twitter:url"	 content="<%= "#{request.protocol}#{request.host_with_port}#{request.fullpath}" %>">
  <meta name="twitter:title"	 content="<%= @idea.title %>">
  <meta name="twitter:description" content="<%= truncate(strip_tags(@idea.content), {:length => 100}) %>">
  <% if images.present? %>
    <meta name="twitter:image"	 content="<%= "#{request.protocol}#{request.host_with_port}#{images.first.value}" %>">
  <% end %>
<% end %>