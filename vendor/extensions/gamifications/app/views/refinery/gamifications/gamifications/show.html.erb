<% content_for :body_content_title do %>
  <%= @gamification.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Some</h1>
    <p>
      <%=raw @gamification.some %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="gamifications">
      <% @gamifications.each do |gamification| %>
        <li>
          <%= link_to gamification.title, refinery.gamifications_gamification_path(gamification) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
