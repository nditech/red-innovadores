<ul>
  <% if ::Refinery::Gamifications::Admin::GamificationsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.gamifications_admin_gamifications_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_gamifications_admin_gamification_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Gamifications::Admin::GamificationsController.sortable? && ::Refinery::Gamifications::Gamification.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Gamifications"),
                 refinery.gamifications_admin_gamifications_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Gamifications"),
                 refinery.gamifications_admin_gamifications_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
