<div class='pagination_container'>
  <% if @rankings.any? %>
    <% @rankings.each do |ranking|%>
      <h3><%= ranking[:type].name%></h3>
      <% ranking[:ranking].each do |user| %>
      <li class='clearfix record <%= cycle("on", "on-hover") %>'>
        <span class='title'><%= user.full_name %></span>
        <span><%= user.type_points %></span>
      </li>
        
      <% end %>
    <% end %>
  <% else %>
    <p>
      <strong>
        <%= t('.no_items_yet') %>
      </strong>
    </p>
  <% end %>
</div>
