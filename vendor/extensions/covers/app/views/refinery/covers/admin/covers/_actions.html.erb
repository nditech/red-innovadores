<ul>
  <% if ::Refinery::Covers::Admin::CoversController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.covers_admin_covers_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_covers_admin_cover_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Covers::Admin::CoversController.sortable? && ::Refinery::Covers::Cover.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Covers"),
                 refinery.covers_admin_covers_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Covers"),
                 refinery.covers_admin_covers_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
