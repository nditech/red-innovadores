<% content_for :body_content_title do %>
  <%= @experience.title %>
<% end %>

<% content_for :body do %>
  <div class="experience show">
    <aside class='details'>
      <div class="details-container">
        <div class="date">
          <%= l(@experience.created_at.to_date, :format => :short)%> <span><%= @experience.created_at.year %></span>
        </div>
        
        <div class="details-separator"></div>
        
        <div class="author">
          <span><i class="icon-user"></i><%= "#{@experience.user.username.humanize}" if @experience.user.present? %></span>
        </div>
        

        <div class="other-ideas">
          <h3>Otras Experiencias</h3>
          <ul id="experiencias">
            <% @experiences.each do |experience| %>
              <li><%= link_to experience.title, refinery.experiences_experience_path(experience) %></li>
            <% end %>
          </ul>
        </div>
      
        <div class="social-plugin-container">
          <h3>Comparte</h3>
          <ul class="social-plugin">
            <li><span class='st_facebook_hcount' displayText='Facebook'></span></li>
            <li><span class='st_twitter_hcount' displayText='Tweet'></span></li>
            <li><span class='st_googleplus_hcount' displayText='Google +'></span></li>
            <li><span class='st_email_hcount' displayText='Email'></span></li>
          </ul>
        </div>
      </div>
    </aside>
    
    <section class="summary">
      <header>
        <h1><%=raw @experience.title %></h1>
      </header>

      <p><%= content_teaser(@experience).html_safe %></p>
    </section>
  </div>
<% end %>

<%= render '/refinery/content_page' %>

<% if params[:share] == 'true' %>
  <div class="modal fade">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h3>Comparte tu idea</h3>
    </div>
    <div class="modal-body">
      <span class='st_facebook_hcount' displayText='Facebook'></span>
      <span class='st_twitter_hcount' displayText='Tweet'></span>
      <span class='st_googleplus_hcount' displayText='Google +'></span>
      <span class='st_email_hcount' displayText='Email'></span>
    </div>
    <div class="modal-footer">
      <a href="#" class="btn">Close</a>
    </div>
  </div>
  
  <script type="text/javascript" charset="utf-8">
  jQuery(document).ready(function($){
    $('.modal').modal();
  })
  </script>
<% end %>