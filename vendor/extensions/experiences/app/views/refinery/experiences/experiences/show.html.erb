<% content_for :body_content_title do %>
  <%= @experience.title %>
<% end %>

<% content_for :body do %>
  <div class="experience">
    <header>
      <h1><%=raw @experience.title %></h1>
      <section class="detail">Enviado hace <%= time_ago_in_words(@experience.created_at) %> por <%= @experience.user.username %></section> 
    </header>
    <section><p><%= content_teaser(@experience).html_safe %></p></section>
  </div>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="experiences">
      <% @experiences.each do |experience| %>
        <li>
          <%= link_to experience.title, refinery.experiences_experience_path(experience) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
