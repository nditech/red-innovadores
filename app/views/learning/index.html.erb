<div class="row">
  <div class="span12">
    <section id="body_content_left">
      <section id="blog_posts">
        <% @courses.each do |course| %>
          <article class="blog_post" id="<%= course['id'] %>">
            <div class="post-resume">
              <aside class='details'>
                <div class="details-container">
                  <div class="date">
                    <% if course['start_at'] %>
                      <%= l(course['start_at'].to_date, :format => :short)%><span><%= course['start_at'].to_date.year%></span>
                    <% end %>
                  </div>

                  <div class="details-separator"></div>
                </div>
              </aside>
              <section class='post-summary'>
                <div class="post-summary-container">
                  <header>
                    <h1><%= course['name'] %></h1>
                  </header>
                  <%= raw course['syllabus_body']%>
                  <%= link_to "Mas informacion", aprendizaje_show_path(course['id'])%>
                </div>
              </section>
            </div>
          </article>
        <% end %>
      </section>

    </section>
  </div>
</div>