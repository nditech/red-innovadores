<div class="row">
  <div class="span6">
    <h1> Experiencias <a href="#newExperiences" class="btn btn-warning pull-right" data-toggle="modal">Nueva Experiencia</a></h1>
    <div id="experiences" class="row">
      <% @experiences.each do |experience| %>
      <div class="span6">
        <div class="experience">
          <header>
            <h2><%= link_to experience.title, refinery.experiences_experience_path(experience) %> </h2>
            <section class="detail">Enviado hace <%= time_ago_in_words(experience.created_at) %> por <%= experience.user.username %></section> 
          </header>
          <section><p><%= content_teaser(experience).html_safe %></p></section>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div class="span6">
    <h1> Ideas <a href="#newIdea" class="btn btn-warning pull-right" data-toggle="modal">Nueva Idea</a></h1>
    <div id="ideas">
      <% @ideas.each do |idea| %>
        <div class="span6">
          <div class="idea">
            <header>
              <h2><%= link_to idea.title, refinery.ideas_idea_path(idea) %></h2>
              <section class="detail">Enviado hace <%= time_ago_in_words(idea.created_at) %> por <%= idea.user.username %></section> 
            </header>
            <section><p><%= content_teaser(idea).html_safe %></p></section>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="modal hide fade" id="newExperiences">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Nueva Experiencia</h3>
  </div>
  <div class="modal-body">
    <%= form_for @experience, url: refinery.experiences_experiences_path do |form|%>
      <div class="control-group">
        <%= form.label :title, 'Titulo', class: 'control-label' %>
        <div class="controls">
          <%= form.text_field :title, placeholder: 'Titulo de tu experiecnia', class: 'input-xlarge' %>
        </div>
      </div>
      <div class="control-group">
        <%= form.label :content, 'Contenido', class: 'control-label' %>
        <div class="controls">
          <%= form.text_area :content, placeholder: "Contenido de la idea", class: ["tinymce"]%>
        </div>
      </div>
    <% end %>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Cerrar</a>
    <a href="#" class="btn btn-primary" id="crearExperienceButton">Crear Idea</a>
  </div>
</div>

<div class="modal hide fade" id="newIdea">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Nueva Idea</h3>
  </div>
  <div class="modal-body">
    <%= form_for @idea, url: refinery.ideas_ideas_path do |form|%>
      <div class="control-group">
        <%= form.label :title, 'Titulo', class: 'control-label' %>
        <div class="controls">
          <%= form.text_field :title, placeholder: 'Titulo de la idea', class: 'input-xlarge' %>
        </div>
      </div>
      <div class="control-group">
        <%= form.label :content, 'Contenido', class: 'control-label' %>
        <div class="controls">
          <%= form.text_area :content, placeholder: "Contenido de la idea", class: ["tinymce"]%>
        </div>
      </div>
    <% end %>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Cerrar</a>
    <a href="#" class="btn btn-primary" id="crearIdeaButton">Crear Idea</a>
  </div>
</div>