<article class='blog_comment_message' id='<%= "comment-#{comment.to_param}" %>'>
  <header class='blog_comment_author'>
    <span class="author"><strong><%= comment.name %></strong></span>
    <span class="date"><strong><%= l(comment.created_at.to_date, :format => :long)%></strong></span>
  </header>
  <div class="comment-message-container">
    <div class='comment_message'>
      <%= simple_format auto_link(comment.message.to_s) %>
    </div>
  </div>
</article>
