<% if @categories.any? %>
  <h2><%= t('.title') %></h2>
  <ul id='categories'>
    <% @categories.each do |category| %>
      <li<%= " class='selected'" if @category.present? and @category.id == category.id %>>
        <%= link_to refinery.blog_category_path(category) do %>
          <i class="icon-play"></i> <%= "#{category.title} (#{category.post_count})"%>
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>