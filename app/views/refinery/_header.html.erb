<header>
  <div class="container">
    <%= link_to refinery.root_path, class: ['home-link'] do image_tag 'logo.png', class: ['pull-left'] end%>
    <% if current_refinery_user.blank? %>
      <% unless mobile_device? %>
        <%= link_to 'Registrarse', '/registro', class:['btn', 'btn-warning', 'pull-right', 'signup-button']%>
        <%= link_to 'Entrar', '/refinery/users/login', class:['btn', 'btn-warning', 'pull-right', 'profile-button']%>
        <% end %>
    <% else %>
      <% unless mobile_device? %>
        <div class="btn-group pull-right profile-button">
          <a class="dropdown-toggle btn btn-warning" data-toggle="dropdown" href="#">
            <%= current_refinery_user.display_name %><span class="caret"></span>
          </a>
          <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
              <li><a tabindex="-1" href="/members/edit">Editar perfil</a></li>
              <% if current_refinery_user.has_role?(:superuser) -%>
                <li><a tabindex="-1" href="/administrador">CMS Administrador</a></li>
                <li><a tabindex="-1" href="/foros/admin">Foro Administrador</a></li>
              <% end -%>
              <li class="divider"></li>
              <li><a tabindex="-1" href="/refinery/users/logout">Logout</a></li>
          </ul>
        </div>
      <% end %>
    <% end -%>
    <% unless mobile_device? %>
      <ul class="pull-right social-network-links ">
        <li><%= link_to image_tag('twitter-button.png'), 'https://twitter.com/Red_Innovacion', target: :blank %></li>
        <li><%= link_to image_tag('facebook-button.png'), 'https://www.facebook.com/RedInnovacion.org', target: :blank %></li>
        <li><%= link_to image_tag('slideshare-button.png'), 'http://www.slideshare.net/RedInnovacion', target: :blank %></li>
      </ul>
    <% end %>
  </div>
</header>
<div class="navbar">
  <div class="navbar-inner">
    <div class="container">
      <%= render :partial => "/refinery/menu", :locals => {:dom_id => 'menu', :css => 'menu'} %>
    </div>
  </div>
</div>
